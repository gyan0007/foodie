<% provide(:title, @restaurant.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_for @restaurant %>
        <font size="+3">
        <%= @restaurant.name %>
        </font>
        <br><br>
        <span class='notbold'>
          <%= @restaurant.location %>
        </span>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @restaurant.rating_n_reviews.any? %>
      <h3>Rating And Reviews (<%= @restaurant.rating_n_reviews.count %>)</h3>
      <ol class="rating_n_reviews">
        <%= render @rating_n_reviews %>
      </ol>
      <%= will_paginate @rating_n_reviews %>
    <% end %>
  </div>
</div>
